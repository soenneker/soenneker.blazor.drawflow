    private async Task CreateSampleFlow()
    {
        if (_flow != null)
        {
            AddLog("Creating sample workflow...", "info");

            await _flow.Clear();
            _nodeCount = 0;
            _connectionCount = 0;

            // Add nodes
            await _flow.AddNode("github", 0, 1, 100, 100, "github", new { name = "GitHub", icon = "üêô" }, "<div class='node-content'><span class='node-title'>GitHub</span></div>");
